@model Product
<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.ImageUrl" alt="" />
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Html.Raw(Model.Description)</p>
        <small class="text-muted">
            <i class="fa-solid fa-manat-sign"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        <a class="btn btn-primary btn-sm" asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url">Details</a>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="AddToCart" style="display:inline;" method="post">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                <input type="hidden" name="quantity" value="1" />
                <button type="submit" class="btn btn-primary btn-sm" >Add to Cart</button>
            </form>
        }
    </div>
</div>